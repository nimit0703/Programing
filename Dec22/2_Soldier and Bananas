import java.util.Scanner;

public class Practice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		int k = sc.nextInt();   // banana rate
		int n = sc.nextInt();	// has n dollar
		int w = sc.nextInt();	// wants w banana
		
		int totalBananaCost = k*w*(w+1)/2;
		if(totalBananaCost<=n) {
			System.out.println(0);
		}else {
			System.out.println(totalBananaCost-n);
		}
		sc.close();
	}
