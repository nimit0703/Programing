import java.util.Scanner;

public class Practice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		if((n & 1) == 1) {
			System.out.println("NO");
		}
		else {
			System.out.println("YES");
		}
	}

	

}
