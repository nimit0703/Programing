import java.util.*;

public class Practice {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int T = sc.nextInt();   // test cases
		while(T-->0){
			int a=sc.nextInt();
			int b=sc.nextInt();
			System.out.println(Math.min((a+b)/4, Math.min(a, b)));
		}
		sc.close();
	}
}
